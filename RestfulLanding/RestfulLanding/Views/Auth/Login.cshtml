@model UserLogin

@{
    ViewData["Title"] = LocalizationManager.current["LoginPageTitle"];
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@LocalizationManager.current["LoginPageTitle"]</h2>

    <form asp-action="Login" asp-controller="Auth" method="post" class="card p-4 shadow">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">@LocalizationManager.current["AuthEmailLabel"]</label>
            <input asp-for="Email" class="form-control" placeholder="@LocalizationManager.current["AuthEmailPlaceholder"]" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">@LocalizationManager.current["AuthPasswordLable"]</label>
            <input asp-for="Password" class="form-control" placeholder="@LocalizationManager.current["AuthPasswordPlaceholder"]" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="text-center">
            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <input type="submit" value="@LocalizationManager.current["LoginPageTitle"]" class="btn btn-primary btn-lg" />
            <input type="button" value="@LocalizationManager.current["DontHaveAccount"]" class="btn btn-secondary btn-lg" onclick="window.location.href='@Url.ActionLink("Register", "Home", new {ViewBag.ReturnUrl})'" />
        </div>
    </form>
</div>
