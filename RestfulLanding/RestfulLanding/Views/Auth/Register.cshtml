@model UserRegister

@{
    ViewData["Title"] = LocalizationManager.current["RegisterPageTitle"];
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@LocalizationManager.current["RegisterPageTitle"]</h2>

    <form asp-action="Register" asp-controller="Auth" method="post" class="card p-4 shadow">
        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">@LocalizationManager.current["AuthEmailLabel"]</label>
            <input asp-for="Email" class="form-control" placeholder="@LocalizationManager.current["AuthEmailPlaceholder"]" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">@LocalizationManager.current["AuthPasswordLabel"]</label>
            <input asp-for="Password" class="form-control" placeholder="@LocalizationManager.current["AuthPasswordPlaceholder"]" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PasswordConfirm" class="form-label">@LocalizationManager.current["AuthPasswordConfirmLable"]</label>
            <input asp-for="PasswordConfirm" class="form-control" placeholder="@LocalizationManager.current["AuthPasswordConfirmPlaceholder"]" required />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>

        <div class="text-center">
            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <input type="submit" value="@LocalizationManager.current["RegisterPageTitle"]" class="btn btn-primary btn-lg" />
        </div>
    </form>
</div>
