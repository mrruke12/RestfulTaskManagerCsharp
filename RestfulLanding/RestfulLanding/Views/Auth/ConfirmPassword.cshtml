@model ConfirmPasswordModel

@{
    ViewData["Title"] = LocalizationManager.current["ConfirmPasswordPageTitle"];
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@LocalizationManager.current["ConfirmPasswordPageTitle"]</h2>

    <form asp-action="ConfirmPassword" asp-controller="Auth" method="post" class="card p-4 shadow">
        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">@LocalizationManager.current["AuthPasswordLabel"]</label>
            <input asp-for="Password" class="form-control" placeholder="@LocalizationManager.current["AuthPasswordPlaceholder"]" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="text-center">
            <input type="hidden" asp-for="Email" value="@Model.Email" />
            <input type="hidden" asp-for="Action" value="@Model.Action" />
            <input type="submit" value="@LocalizationManager.current["ConfirmPasswordPageTitle"]" class="btn btn-primary btn-lg" />
        </div>
    </form>
</div>
