@{
    ViewData["Title"] = LocalizationManager.current["DeleteAccountPageTitle"];
}

<div class="container mt-5">
    <h1 class="text-center"></h1>
    <div class="row mt-4 justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-danger text-center">
                    @LocalizationManager.current["ConfirmDeletingAccount"]
                </div>
                <div class="card-body text-center">
                    <p class="card-text">
                        @LocalizationManager.current["AreYouSureToDeleteAccount"]
                    </p>
                    <div class="d-flex justify-content-center">
                        <form asp-action="DeleteAccount" asp-asp-controller="Profile" method="post" class="m-2">
                            <input type="hidden" name="response" value="1" />
                            <button type="submit" class="btn btn-danger">@LocalizationManager.current["DeleteAccountPageTitle"]</button>
                        </form>
                        <a asp-action="Info" asp-asp-controller="Profile" class="btn btn-secondary m-2">@LocalizationManager.current["CancelButton"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>