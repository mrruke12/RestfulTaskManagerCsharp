@model Objective

@{
    ViewData["Title"] = LocalizationManager.current["EditPageTitle"];
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@LocalizationManager.current["CreatePageTitle"]</h2>

    <form asp-action="Edit" asp-controller="Objective" method="post" class="card p-4 shadow">
        <div class="form-group mb-3">
            <label asp-for="description" class="form-label">@LocalizationManager.current["NewObjectiveTitleLabel"]</label>
            <input asp-for="description" class="form-control" placeholder="@LocalizationManager.current["NewObjectiveTitlePlaceholder"]" required />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="due" class="form-label">@LocalizationManager.current["NewObjectiveDueLabel"]</label>
            <input asp-for="due" type="date" class="form-control" />
            <span asp-validation-for="due" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="priority" class="form-label">@LocalizationManager.current["NewObjectivePriorityLabel"]</label>
            <select asp-for="priority" class="form-select">
                <option value="0">@LocalizationManager.current["PriorityLowOption"]</option>
                <option value="1" selected>@LocalizationManager.current["PriorityNormalOption"]</option>
                <option value="2">@LocalizationManager.current["PriorityHighOption"]</option>
            </select>
            <span asp-validation-for="priority" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="urgency" class="form-label">@LocalizationManager.current["NewObjectiveUrgencyLabel"]</label>
            <select asp-for="urgency" class="form-select">
                <option value="0">@LocalizationManager.current["UrgencyLowOption"]</option>
                <option value="1" selected>@LocalizationManager.current["UrgencyNormalOption"]</option>
                <option value="2">@LocalizationManager.current["UrgencyHighOption"]</option>
            </select>
            <span asp-validation-for="urgency" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="status" class="form-label">@LocalizationManager.current["StatusLabel"]</label>
            <select asp-for="status" class="form-select">
                <option value="1" selected>@LocalizationManager.current["StatusNone"]</option>
                <option value="0">@LocalizationManager.current["StatusInWork"]</option>
                <option value="2">@LocalizationManager.current["StatusDone"]</option>
            </select>
            <span asp-validation-for="status" class="text-danger"></span>
        </div>

        <div class="text-center">
            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <input type="hidden" name="objectiveId" value="@ViewBag.objectiveId" />
            <input type="submit" value="@LocalizationManager.current["EditObjectiveButton"]" class="btn btn-primary btn-lg" />
        </div>
    </form>
</div>
